<Page x:Class="zipprogram.ZipWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zipprogram"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#5F2383"
      Title="ZipWindow">

    <Grid>
        <StackPanel Margin="100">
            <Label Foreground="White" Content="_Name:" Target="{Binding ElementName=txtName}" />
            <TextBox Name="txtName" />
            <Label Foreground="White" Content="_Mail:" Target="{Binding ElementName=txtMail}" />
            <TextBox Name="txtMail" />
            <Button Padding="5" Width="240" Height="68">
                <TextBlock Margin="5"><Run Text="OK"/></TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Page>
